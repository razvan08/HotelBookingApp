<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginTop="100dp"
    android:background="@drawable/bg1"
    android:layout_margin="1dp"
    android:orientation="vertical"
    android:padding="3dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:hint="BOOKING"
        android:background="@color/colorAccent"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textAlignment="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="40dp"
        android:background="@color/colorPrimaryDark">

    </View>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:layout_marginTop="400dp">

        <TextView
            android:id="@+id/date_start"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:hint="Start date"
            android:padding="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            tools:ignore="TouchTargetSizeCheck" />

        <DatePicker
            android:id="@+id/date_start_entered"
            android:layout_width="175dp"
            android:layout_height="174dp"
            android:layout_row="7"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:hint="Enter no of nights"
            android:padding="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/days"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:hint="Enter no of nights"
            android:padding="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:padding="5dp"
            android:text="Customer Name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/customer_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:hint="Enter your name"
            android:padding="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:padding="5dp"
            android:text="Contact No."
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/customer_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:hint="Enter contact number"
            android:inputType="phone"
            android:padding="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:padding="5dp"
            android:text="Email Id"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/customer_email"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:hint="Enter your email id"
            android:padding="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/no_of_rooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:padding="5dp"
            android:text="Room Type"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <Spinner
            android:id="@+id/room_spinner"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:entries="@array/room_type"
            android:padding="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/stay_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:padding="5dp"
            android:text="No. of Stay nights"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:padding="5dp"
            android:text="Generate your PIN"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/customer_pin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:hint="Enter 6 digit PIN"
            android:inputType="numberPassword"
            android:padding="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <Button
            android:id="@+id/cust_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/black"
            android:padding="5dp"
            android:text="Save" />


    </GridLayout>

</LinearLayout>