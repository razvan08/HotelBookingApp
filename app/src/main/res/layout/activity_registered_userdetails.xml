<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/bg1"
    android:layout_marginTop="100dp"
    android:layout_margin="1dp"
    android:orientation="vertical"
    android:padding="3dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:hint="BOOKING STATUS"
        android:textSize="20dp"
        android:background="@color/colorAccent"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textAlignment="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="40dp"
        android:background="@color/colorPrimaryDark">
    </View>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textSize="16dp"
            android:background="@color/white"
            android:textColor="@color/colorPrimaryDark"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Customer Name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name_entered"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:textSize="16dp"
            android:background="@drawable/black"
            android:textColor="@color/colorPrimaryDark"
            android:layout_row="0"
            android:layout_column="1"
            android:text="Daniel Johnson" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Contact No."
            android:textSize="16dp"
            android:background="@color/white"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phno_entered"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:textSize="16dp"
            android:background="@drawable/black"
            android:textColor="@color/colorPrimaryDark"
            android:layout_row="1"
            android:layout_column="1"
            android:text="7587796811"
            android:inputType="phone" />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textSize="16dp"
            android:background="@color/white"
            android:textColor="@color/colorPrimaryDark"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Email Id"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email_entered"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:textSize="16dp"
            android:background="@drawable/black"
            android:textColor="@color/colorPrimaryDark"
            android:layout_row="2"
            android:layout_column="1"
            android:text="daniel@gmail.com" />

        <TextView
            android:id="@+id/no_of_rooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textSize="16dp"
            android:background="@color/white"
            android:textColor="@color/colorPrimaryDark"
            android:layout_row="3"
            android:layout_column="0"
            android:text="Room Type"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/room_entered"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:background="@drawable/black"
            android:text="Delux Room"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/cust_stay_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textSize="16dp"
            android:background="@color/white"
            android:textColor="@color/colorPrimaryDark"
            android:layout_row="4"
            android:layout_column="0"
            android:text="No. of Stay days"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stay_days_entered"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:background="@drawable/black"
            android:textColor="@color/colorPrimaryDark"
            android:layout_margin="15dp"
            android:layout_row="4"
            android:layout_column="1"
            android:text="7 Days"
            android:inputType="number" />


    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/sendemail"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/black"
            android:hint="send"
            android:padding="16dp"
            android:text="email"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/sendsms"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/black"
            android:hint="send"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="16dp"
            android:text="sms"
            android:textColor="@android:color/black" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_margin="20dp">
        <ImageButton
            android:id="@+id/edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/black"
            android:hint="edit"
            android:padding="16dp"
            android:layout_marginLeft="10dp"
            android:text="sms"
            android:textColor="@android:color/black"
            android:src="@android:drawable/ic_menu_edit"/>

        <ImageButton
            android:id="@+id/main_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/black"
            android:padding="16dp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:src="@android:drawable/ic_menu_agenda" />
    </LinearLayout>

</LinearLayout>