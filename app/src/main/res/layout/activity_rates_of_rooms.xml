<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:background="@drawable/bg6"
    android:orientation="vertical"
    android:padding="5dp"
    android:paddingTop="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="7dp"
        android:hint="ROOM RATES"
        android:background="@color/colorAccent"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="3dp"
        android:background="@color/colorPrimaryDark">

    </View>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/single_bedroom_image"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:src="@drawable/single_bed" />

        <LinearLayout
            android:layout_width="206dp"
            android:layout_height="123dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/single_bedroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="Single Bedroom"
                android:textSize="15dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/single_room_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Single bed rate: $12.5 "

                android:textStyle="italic" />

        </LinearLayout>

    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark">

    </View>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/double_bedroom_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:src="@drawable/double_bed" />

        <LinearLayout
            android:layout_width="216dp"
            android:layout_height="146dp"
            android:layout_margin="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/double_bedroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="Double Bedroom"
                android:textSize="15dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/double_room_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Double bed rate: $24"
                android:textStyle="italic" />

        </LinearLayout>

    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark">

    </View>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/triple_bedroom_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:src="@drawable/triple_bed" />

        <LinearLayout
            android:layout_width="218dp"
            android:layout_height="141dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/triple_bedroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="Triple Bedroom"
                android:textSize="15dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/triple_room_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Triple bed rate: $36.2"
                android:textStyle="italic" />

        </LinearLayout>

    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark">

    </View>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/four_bedroom_image"
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:src="@drawable/four_beds" />

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/four_bedroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="Four Beds"
                android:textSize="15dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/four_room_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Four beds rate: $40"
                android:textStyle="italic" />

        </LinearLayout>

    </GridLayout>


</LinearLayout>